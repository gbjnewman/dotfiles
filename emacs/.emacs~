;; start emacs with custom .emacs location 
;; https://youtu.be/Ee3EtYb8d1o?si=spxiKMl7u0RGw6js&t=2340
;; "C:\Program Files\Emacs\emacs-29.4\bin\runemacs.exe" >>
;; >> -q -l %USERPROFILE%\repos\github\dotfiles\emacs\.emacs





(setq inhibit-startup-message t) ;; remove startup message

(scroll-bar-mode -1) ;; disable visble scroll bar
(tool-bar-mode -1) ;; disable the toolbar
(tooltip-mode -1) ;; disable tooltips
(set-fringe-mode 10) ;; give some breathing room

(menu-bar-mode -1) ;; disable menu bar

(setq visible-bell t) ;; set visible bell

(set-face-attribute 'default nil :height 120)

(load-theme 'tango-dark)

;;Initialize package sources
(require package)

(setq package-archives '(("melpa) . "https://melpa.org/packages/")
